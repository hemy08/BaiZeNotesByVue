{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/main/**/*.ts",
    "src/main/global-types.d.ts",
    "src/main/themes/*.ts",
    "src/main/templates/*.ts",
    "src/main/templates/writing/*.ts",
    "src/main/templates/textblock/*.ts",
    "src/main/templates/plantuml/*.ts",
    "src/main/templates/mermaid/*.ts",
    "src/main/scripts/mermaid.js",
    "src/main/plugins/**/*.ts",
    "src/main/plugins/*.ts",
    "src/main/utils/**/*.ts",
    "src/main/utils/*.js",
    "src/renderer/src/dialogs/**/*.ts",
    "src/renderer/src/lib/**/*.ts",
    "src/renderer/src/lib/themes/*.ts",
    "src/renderer/src/lib/Katex/**/*.ts",
    "src/renderer/src/lib/Katex/**/*.js",
    "src/renderer/src/lib/Katex/**/*.mjs",
    "src/renderer/src/lib/Katex/*.ts",
    "src/renderer/src/lib/Katex/*.js",
    "src/renderer/src/lib/Katex/*.mjs",
    "src/renderer/src/lib/mermaid/**/*.ts",
    "src/renderer/src/lib/mermaid/**/*.js",
    "src/renderer/src/lib/mermaid/**/*.mjs",
    "src/renderer/src/lib/monaco-editor/**/*.nls.js",
    "src/renderer/src/lib/monaco-editor/**/*.js",
    "src/renderer/src/lib/monaco-editor/**/*.ts",
    "src/renderer/src/lib/monaco-editor/min/vs/editor/*.nls.js",
    "src/renderer/src/lib/monaco-themes/**/*.ts",
    "src/renderer/src/lib/monaco-themes/**/*.js",
    "src/main/themes/monaco-themes/**/*.ts",
    "src/main/themes/monaco-themes/*.js",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
