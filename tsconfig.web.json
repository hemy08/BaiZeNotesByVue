{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/lib/**/*.ts",
    "src/lib/themes/*.ts",
    "src/lib/templates/*.ts",
    "src/lib/templates/writing/*.ts",
    "src/lib/templates/textblock/*.ts",
    "src/lib/templates/plantuml/*.ts",
    "src/lib/templates/mermaid/*.ts",
    "src/lib/scripts/mermaid.js",
    "src/main/plugins/**/*.ts",
    "src/main/plugins/*.ts",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
